/* pages/detail/detail.wxss */
.detail{
  padding-left:20rpx;
  padding-right:20rpx;
  background: #f5f5f5;
  padding-bottom: 20%;
  padding-top:50rpx;
}
.detailTitle{
  font-size: 40rpx;
  font-weight: bold;
  width:100%;
  color:#333;
  border-bottom:1px solid #ececec;
  display: block;
  text-align: center;
}
.detContainer{
  margin-bottom: 30rpx;
  font-size: 28rpx;
  border:1px solid #ececec;
  padding:15rpx;
  border-radius: 10rpx;
  position: relative;
  box-shadow: 2px 2px 2px #efefef;
  background: #fff;
  color:#333;
}
.detContainer .detialIcon{
  position: absolute;
  right:20rpx;
  top:18rpx;
  width:20px;
  height:20px;
  color:#fff;
  display: inline-block;
}
.hide{
 display: none;
}
.show{ 
 display: block;
 
}
.kangou{
  margin-top:10rpx;
}
.time{
  width:100%;
  display:block;
  border-top:1px solid #f5f5f5;
  padding-top:10rpx;
  font-size: 25rpx;
}
.title{
  width:21%;
  text-align: right;
  display: inline-block;
  font-weight: bold;
  color:#333;
}
.textBody{
  width:500rpx;
  display: inline-block;
  vertical-align: top;
  color:#333;
}
.projectTitle{
  color:#333;
}